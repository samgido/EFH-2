<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EFH_2.BasicDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EFH_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">

    <StackPanel>

        <RelativePanel>

            <TextBox
                x:Name="uxClientBox"
                Header="Client:"
                Margin="50,0,0,0"
                Width="300"/>

            <ComboBox
                x:Name="uxStateBox"
                Header="State:"
                SelectionChanged="uxStateBox_SelectionChanged"
                RelativePanel.RightOf="uxClientBox"
                Margin="50,0,0,0"/>

            <ComboBox
                x:Name="uxCountyBox"
                Header="County:"
                RelativePanel.RightOf="uxStateBox"
                Width="250"
                Margin="50,0,0,0"/>

        </RelativePanel>

        <StackPanel
            Orientation="Horizontal">

            <TextBox
                Header="Practice:"
                Margin="50,0,0,0"
                Width="650"/>

        </StackPanel>
            
        <RelativePanel>

            <TextBox
                x:Name="uxByBox"
                Header="By:"
                Margin="50,0,0,0"/>

            <DatePicker
                x:Name="uxDatePicker"
                Header="Date:"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Margin="300,0,0,0"/>
        </RelativePanel>

        <StackPanel
            Padding="60,30,0,0">

            <RelativePanel
                Padding="0, 5">

                <TextBlock
                    x:Name="uxDrainageAreaLabel"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="Drainage Area: "
                    Margin="20,0,0,0"
                    />

                <TextBox
                    x:Name="uxDrainageArea"
                    Margin= "200,0,0,0"
                    />

                <TextBlock
                    x:Name="uxAcresLabel"
                    RelativePanel.RightOf="uxDrainageArea"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="acres"
                    Margin="10,0,0,0"
                    />
            </RelativePanel>

            <RelativePanel
                Padding="0, 5">

                <TextBlock
                    x:Name="uxRunoffCurveLabel"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="Runoff Curve Number:"
                    Margin="20,0,0,0"
                    />

                <TextBox
                    x:Name="uxRunoffCurveNumber"
                    Margin="200,0,0,0"
                    />

            </RelativePanel>

            <RelativePanel
                Padding="0, 5">

                <TextBlock
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="Watershed Length:"
                    Margin="20,0,0,0"
                    />

                <TextBox
                    x:Name="uxWatershedLength"
                    Margin="200,0,0,0"
                    />

                <TextBlock
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    RelativePanel.RightOf="uxWatershedLength"
                    Text="feet"
                    Margin="10,0,0,0"
                    />
            </RelativePanel>

            <RelativePanel
                Padding="0, 5">

                <TextBlock
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="Watershed Slope:"
                    Margin="20,0,0,0"
                    />

                <TextBox
                    x:Name="uxWatershedSlope"
                    Margin="200,0,0,0"
                    />

                <TextBlock
                    RelativePanel.RightOf="uxWatershedSlope"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="percent"
                    Margin="10,0,0,0"
                    />
            </RelativePanel>

            <RelativePanel
                Padding="0, 5">

                <TextBlock
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Margin="20,0,0,0"
                    Text="Time of Concentration:"
                    />

                <TextBox
                    x:Name="uxTimeOfConcentration"
                    Margin="200,0,0,0"
                    />

                <TextBlock
                    RelativePanel.RightOf="uxTimeOfConcentration"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Text="hours"
                    Margin="10,0,0,0"
                    />

            </RelativePanel> 
            

        </StackPanel>
    </StackPanel>
</Page>
