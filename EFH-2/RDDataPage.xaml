<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EFH_2.RDDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EFH_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel
        Background="Transparent">

        <RelativePanel
            Background="Transparent"
            Padding="0,5">

            <TextBlock
                x:Name="uxRainfallDistTypeLabel"
                Text="Rainfall Distribution-Type:"
                Margin="125,0,0,0"
                />

            <ComboBox
                x:Name="uxRainfallDistType"
                RelativePanel.RightOf="uxRainfallDistTypeLabel"
                Margin="10,0,0,0"
                Width="175"
                />
        </RelativePanel>

        <RelativePanel
            Padding="0,5">

            <TextBlock
                x:Name="uxDUHLabel"
                Text="Dimensionless Unit Hydrograph:"
                Margin="125,0,0,0"
                />

            <ComboBox
                x:Name="uxDUH"
                RelativePanel.RightOf="uxDUHLabel"
                Margin="10,0,0,0"
                Width="175"
                />
        </RelativePanel>

    </StackPanel>
</Page>
