<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EFH_2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EFH_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Orientation="Vertical">

        <MenuBar>
            <MenuBarItem Title="File"
                         AccessKey="F">
                <MenuFlyoutItem Text="New"
                                AccessKey="N"/>
                <MenuFlyoutItem Text="Open..."
                                AccessKey="O"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Recalculate"
                                AccessKey="R"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Save"
                                AccessKey="S"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Export Hydrograph(s)"
                                AccessKey="E"/>
                <MenuFlyoutItem Text="Print..."
                                AccessKey="P"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Exit"
                                AccessKey="X"/>
            </MenuBarItem>

            <MenuBarItem Title="Edit"
                         AccessKey="E">
                <MenuFlyoutItem Text="Cut"
                                AccessKey="T"/>
                <MenuFlyoutItem Text="Copy"
                                AccessKey="C"/>
                <MenuFlyoutItem Text="Paste"
                                AccessKey="P"/>
            </MenuBarItem>

            <MenuBarItem Title="View"
                        AccessKey="V">
                <ToggleMenuFlyoutItem Text="Toolbar"
                                      AccessKey="T"/>
            </MenuBarItem>

            <MenuBarItem Title="Tools"
                         AccessKey="T">
                <MenuFlyoutItem Text="Average Slope Calculator"
                                AccessKey="A"/>
                <MenuFlyoutItem Text="Hydrologic Soil Groups"
                                IsEnabled="False"
                                AccessKey="H"/>
            </MenuBarItem>

            <MenuBarItem Title="Help"
                         AccessKey="H">
                <MenuFlyoutItem Text="Help Contents (chm)"
                                AccessKey="H"/>
                <MenuFlyoutItem Text="User Manual (pdf)"
                                AccessKey="U"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="About"
                                AccessKey="A"/>
            </MenuBarItem>
        </MenuBar>

        <CommandBar
            FlowDirection="LeftToRight"
            ClosedDisplayMode="Compact">

            <AppBarButton
                Icon="Page"
                Label="New"/>

            <AppBarButton
                Icon="OpenFile"
                Label="Open"/>

            <AppBarButton
                Icon="Save"
                Label="Save"/>

            <AppBarSeparator/>

            <AppBarButton
                Icon="Print"
                Label="Print"/>

            <AppBarSeparator/>

            <AppBarButton
                Icon="Cut"
                Label="Cut"/>

            <AppBarButton
                Icon="Copy"
                Label="Copy"/>

            <AppBarButton
                Icon="Paste"
                Label="Paste"/>

            <AppBarSeparator/>

            <AppBarButton
                x:Name="uxSlopeCalulatorButton"
                Label="Slope Calculator">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xEB3C;"/>
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarButton
                x:Name="uxHSGButton"
                Label="Hydrologic Soil Group">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE773;" />
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarSeparator/>

            <AppBarButton
                Icon="Help"
                Label="Help"/>

        </CommandBar>
        
        <NavigationView
            PaneDisplayMode="Top"
            x:Name="Tabs"
            IsBackButtonVisible="Collapsed" 
            IsSettingsVisible="False"
            SelectionChanged="Tabs_SelectionChanged"
            >
            <NavigationView.MenuItems>
                <NavigationViewItem 
                    Content="Introduction" 
                    Tag="IntroPage"  
                    x:Name="uxIntroPageNav">
                </NavigationViewItem>

                <NavigationViewItem 
                    Content="Basic Data"
                    Tag="BasicDataPage"
                    x:Name="uxBasicDataPageNav">
                </NavigationViewItem>

                <NavigationViewItem
                    Content="Rainfall/Discharge Data"
                    Tag="RDDataPage"
                    x:Name="uxRDDataPageNav">
                </NavigationViewItem>

                <NavigationViewItem
                    Content="RCN"
                    Tag="RCNPage"
                    x:Name="uxRCNPageNav">
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame
                x:Name="contentFrame"
                CacheSize="5">
            </Frame>

        </NavigationView>
    </StackPanel>
</Window>
